<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ls.droidrage.manager"
    android:versionCode="3"
    android:versionName="1.0.2" >

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ls.droidrage.manager.Home"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ls.droidrage.manager.SystemInfo"
            android:screenOrientation="portrait"
            android:label="@string/systeminfo" >
        </activity>
        <activity
            android:name="ls.droidrage.manager.Services"
            android:screenOrientation="portrait"
            android:label="@string/services" >
        </activity>
        <activity
            android:name="ls.droidrage.manager.ServiceDetails"
            android:screenOrientation="portrait" 
            android:theme="@style/Theme.Geo.Dialog" >
        </activity>
        <activity
            android:name="ls.droidrage.manager.Processes"
            android:screenOrientation="portrait"
            android:label="@string/processes" >
        </activity>
        <activity
            android:name="ls.droidrage.manager.ActivityLog"
            android:screenOrientation="portrait"
            android:label="@string/log" >
        </activity>
        <activity
            android:name="ls.droidrage.manager.DbViewer"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.NoTitleBar" >
        </activity>
        <activity
            android:name="ls.droidrage.manager.About"
            android:label="@string/about"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.Dialog" >
        </activity>
    </application>

</manifest>